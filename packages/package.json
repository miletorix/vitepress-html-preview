{
  "name": "@miletorix/vitepress-html-preview",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/miletorix/vitepress-html-preview"
  },
  "homepage": "https://miletorix.github.io/vitepress-html-preview/",
  "description": "A Vue component for embedding external HTML files via iframe in VitePress. Its useful for showcasing interactive demos with full HTML, CSS, and JavaScript support.",
  "main": "./dist/html-preview.umd.js",
  "module": "./dist/html-preview.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/html-preview.es.js",
      "require": "./dist/html-preview.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vue-tsc --declaration --emitDeclarationOnly && vite build",
    "clean": "rimraf dist node_modules .vite .turbo",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "keywords": [
    "vitepress",
    "vue",
    "vue3",
    "iframe",
    "html",
    "embed",
    "preview",
    "html preview",
    "code example",
    "component",
    "vitepress component"
  ],
  "author": "miletorix",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vitepress": "^1.6.3",
    "vue-tsc": "^3.0.0"
  }
}